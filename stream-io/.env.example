# StreamGuide Frontend Environment Variables
# Copy this file to .env.local for local development
# For production, set these variables in your deployment platform (Coolify, Vercel, etc.)

# =============================================================================
# üöÄ APPLICATION CONFIGURATION
# =============================================================================

# Application Environment
NODE_ENV=development

# Application URLs
VITE_APP_URL=http://localhost:5173
VITE_API_URL=http://localhost:3001

# =============================================================================
# üé¨ EXTERNAL API SERVICES
# =============================================================================

# TMDB (The Movie Database) - Required for movie/TV data
# Get your API key from: https://www.themoviedb.org/settings/api
VITE_TMDB_ACCESS_TOKEN=your_tmdb_access_token_here

# Google Gemini AI - Required for AI-powered search and recommendations
# Get your API key from: https://aistudio.google.com/app/apikey
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# üì∫ TV DATA PROVIDERS (Optional - for enhanced live TV features)
# =============================================================================

# Gracenote TV API - Premium TV data provider
# VITE_GRACENOTE_API_KEY=your_gracenote_api_key_here

# EPG.best - TV guide data provider
# VITE_EPG_BEST_API_KEY=your_epg_best_api_key_here

# =============================================================================
# üîß DEVELOPMENT CONFIGURATION
# =============================================================================

# Development Features
VITE_ENABLE_DEVTOOLS=true
VITE_ENABLE_DEBUG_LOGS=true

# Build Configuration
VITE_PRODUCTION_BUILD=false

# =============================================================================
# üåç LOCALIZATION
# =============================================================================

# Default Language (en, es, fr, de, it, ja, ko, pt, zh)
VITE_DEFAULT_LOCALE=en

# =============================================================================
# üìä ANALYTICS & MONITORING (Optional)
# =============================================================================

# Google Analytics
# VITE_GA_TRACKING_ID=your_google_analytics_id

# Sentry Error Tracking
# VITE_SENTRY_DSN=your_sentry_dsn_here

# =============================================================================
# üîê SECURITY CONFIGURATION
# =============================================================================

# CORS Origins (comma-separated for multiple origins)
VITE_CORS_ORIGINS=http://localhost:5173,http://localhost:5174

# =============================================================================
# üìù EXAMPLE VALUES FOR REFERENCE
# =============================================================================

# Example TMDB token format:
# VITE_TMDB_ACCESS_TOKEN=eyJhbGciOiJIUzI1NiJ9.eyJhdWQiOiJ...

# Example Gemini API key format:
# VITE_GEMINI_API_KEY=AIzaSyA1B2C3D4E5F6G7H8I9J0K1L2M3N4O5P6Q

# Example production values:
# VITE_APP_URL=https://streamguide.yourdomain.com
# VITE_API_URL=https://api.streamguide.yourdomain.com
# NODE_ENV=production
# VITE_PRODUCTION_BUILD=true
# VITE_ENABLE_DEVTOOLS=false
# VITE_ENABLE_DEBUG_LOGS=false
