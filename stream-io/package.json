{
  "name": "vite-react-typescript-starter",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "npm run dev:setup && npm run dev:full",
    "dev:clean": "chmod +x scripts/cleanup-dev.sh && ./scripts/cleanup-dev.sh",
    "dev:full": "concurrently --prefix-colors \"bgMagenta.bold,bgBlue.bold\" --names \"BACKEND,FRONTEND\" \"npm run dev:backend\" \"npm run dev:frontend\"",
    "coolify:debug": "chmod +x scripts/coolify-debug.sh && ./scripts/coolify-debug.sh",
    "dev:frontend": "npx vite",
    "dev:backend": "cd backend && npm run dev",
    "dev:setup": "node scripts/dev-setup.js",
    "dev:host": "npx vite --host",
    "build": "npm run build:backend && npm run build:frontend",
    "build:frontend": "npx vite build",
    "build:backend": "cd backend && npm run build",
    "lint": "eslint . && cd backend && npm run lint",
    "preview": "npx vite preview --host",
    "start": "npx vite preview --host 0.0.0.0 --port 3000",
    "postinstall": "if [ \"$NODE_ENV\" != \"production\" ] && [ -d \"backend\" ]; then cd backend && npm install; fi",
    "db:setup": "cd backend && npm run build && npm run db:migrate",
    "db:migrate": "cd backend && npm run db:migrate",
    "db:seed": "cd backend && npm run db:seed",
    "download-logos": "node scripts/download-logos.js",
    "clean": "rm -rf dist backend/dist node_modules/.cache",
    "health": "curl -f http://localhost:3001/health && curl -f http://localhost:5173",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "npx vitest run",
    "test:backend": "cd backend && npm run test"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.28.4",
    "axios": "^1.6.7",
    "date-fns": "^3.3.1",
    "framer-motion": "^11.0.8",
    "immer": "^10.1.1",
    "lodash": "^4.17.21",
    "lucide-react": "^0.344.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.4.1",
    "uuid": "^9.0.1",
    "zustand": "^4.5.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/cors": "^2.8.19",
    "@types/lodash": "^4.14.202",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@types/uuid": "^9.0.8",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^9.2.0",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2",
    "vitest": "^3.2.4",
    "wait-on": "^8.0.3"
  }
}
